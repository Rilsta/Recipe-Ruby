<h1>Grandma Bayou's Killer Kajun Surprise Book</h1>

<h1>Recipe list:</h1>
<ul>
  <% @recipes.each do |recipe| %>
   <li><a href="/recipes/<%= recipe.id %>"><%= recipe.recipe_name %></a></li>
  <% end %>
</ul>

<h3>Add a recipe</h3>

<div class="container-fluid">
  <form action="/recipes" method="post">
    <div class="form-group">
      <label>Add a Recipe:</label>
      <input type="text" class="form-control" id="recipe_name" name="recipe_name" placeholder="Ajouter La Recette">
    </div>
    <button type="submit" class="btn btn-default">Add</button>
  </form>
</div>

<h3>Add a tag</h3>

<ul>
  <% @tags.each do |tag| %>
   <li><a href="/tags/<%= tag.id %>"><%= tag.category %></a></li>
  <% end %>
</ul>

<div class="container-fluid">
  <form action="/tags" method="post">
    <div class="form-group">
      <label>Add a Tag:</label>
      <input type="text" class="form-control" id="category" name="category">
    </div>
    <button type="submit" class="btn btn-default">Add</button>
  </form>
</div>
