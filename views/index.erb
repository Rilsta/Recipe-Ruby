<h1>Grandma Bayou's Killer Kajun Surprise Book</h1>

<a href="/recipes">Search Recipes</a>
<br>
<a href="/recipes/new">Add Recipe</a>

<h1>Recipe list:</h1>
<ul>
  <% @recipes.each do |recipe| %>
   <li><a href="/recipes/<%= recipe.id %>"><%= recipe.recipe_name %></a></li>
  <% end %>
</ul>

<h1>Add a recipe</h1>

<div class="container-fluid">
  <form action="/recipes" method="post">
    <div class="form-group">
      <label>Add a Recipe:</label>
      <input type="text" class="form-control" id="recipe_name" name="recipe_name" placeholder="Ajouter La Recette">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
