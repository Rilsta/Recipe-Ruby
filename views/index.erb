<div class="container">
  <h1>Grandma Bayou's Killer Kajun Surprise Book</h1>

  <h1>Recipe list:</h1>
  <ul>
    <% @recipes.each do |recipe| %>
    <li><a href="/recipes/<%= recipe.id %>"><%= recipe.recipe_name %></a></li>
     <% end %>
   </ul>


<div class="container-fluid">
  <form class="form-inline" action="/recipes" method="post">
    <div class="form-group">
      <label>Add a Recipe:</label>
      <input type="text" class="form-control" id="recipe_name" name="recipe_name" placeholder="Your Recipe">
    </div>
    <button type="submit" class="btn btn-default">Add</button>
  </form>
</div>

<h1>Search by Tags:</h1>

<ul>
  <% @tags.each do |tag| %>
   <li><a href="/tags/<%= tag.id %>"><%= tag.category %></a></li>
  <% end %>
</ul>

<div class="container-fluid">
  <form form class="form-inline" action="/tags" method="post">
    <div class="form-group">
      <label>Add a Tag:</label>
      <input type="text" class="form-control" id="category" name="category" placeholder="Your Custom Tag">
    </div>
    <button type="submit" class="btn btn-default">Add</button>
  </form>
</div>
</div>
